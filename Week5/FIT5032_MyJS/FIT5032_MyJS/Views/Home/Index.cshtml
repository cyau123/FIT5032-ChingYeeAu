<div class='container' style='margin-top: 100px;'>
    <input type='text' class="form-control" id='datepicker' style='width: 300px;'>
</div>


<!-- Script -->
<script src="~/Scripts/notify.min.js" defer></script>
<script>
    $(document).ready(function () {
        $.notify("Testing on notify JS", "success");
    });
</script>
<script src="~/Scripts/bootstrap-datepicker.js" defer></script>
<script type="text/javascript">
    $(document).ready(function () {
        var date = new Date();
        date.setFullYear(2022, 07, 20);
        $('#datepicker').datepicker();
        $('#datepicker').datepicker('setDate', date); //counts month from 0 to 11
    });
</script>